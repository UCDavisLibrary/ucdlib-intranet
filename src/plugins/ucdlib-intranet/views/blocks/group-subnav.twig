{% from getUcdMacro('menus') import subnav %}

{% set post = siteContext.post %}
{% if post and post.groupSubnavPatternPost %}
  {{ post.groupSubnavPatternPost.content }}
{% elseif attributes.isHierarchical %}

  {% set kwargs = {
    title: post.landingPage.title,
    titleLink: post.landingPage.link,
    items: attributes.children,
    oBox: false,
    panel: false,
    show_children: true
    }
  %}
  <aside class="o-box panel">
    {{ subnav( kwargs ) }}
  </aside>

{% endif %}
