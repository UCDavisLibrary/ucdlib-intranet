{% set post = siteContext.post %}
{% if post and post.hasCommitteeMeta %}
  <div class='o-box panel'>
    <div class='committee-meta'>
      {% if post.committeeMeta.permanenceLabel %}
        <div class='committee-meta__section'>
          <div class='h4'>Permanence</div>
          <div>{{ post.committeeMeta.permanenceLabel }}</div>
        </div>
      {% endif %}
      {% if post.committeeMeta.leaders|length %}
        <div class='committee-meta__section'>
          <div class='h4'>Leader/Facilitator</div>
          {% for leader in post.committeeMeta.leaders %}
            <div class='u-space-mb--small'>
              {% if leader.name %}
                <div>{{ leader.name }}</div>
              {% endif %}
              {% if leader.email %}
                <div><a href='mailto:{{ leader.email }}'>{{ leader.email }}</a></div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
      {% if post.committeeMeta.sponsorName %}
        <div class='committee-meta__section'>
          <div class='h4'>Sponsor</div>
          <div>{{ post.committeeMeta.sponsorName }}</div>
        </div>
      {% endif %}
      {% if post.committeeMeta.startDate %}
        <div class='committee-meta__section'>
          <div class='h4'>Start Date</div>
          <div>{{ post.committeeMeta.startDate|date('F Y', false) }}</div>
        </div>
      {% endif %}
      {% if post.groupEndedYear %}
        <div class='committee-meta__section'>
          <div class='h4'>Year Ended</div>
          <div>{{ post.groupEndedYear }}</div>
        </div>
      {% elseif post.committeeMeta.reviewDate or post.committeeMeta.reviewedAnnually %}
        <div class='committee-meta__section'>
          <div class='h4'>Review Date</div>
          {% if post.committeeMeta.reviewedAnnually %}
            <div>Annually</div>
          {% elseif post.committeeMeta.reviewDate %}
            <div>{{ post.committeeMeta.reviewDate|date('F Y', false) }}</div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
